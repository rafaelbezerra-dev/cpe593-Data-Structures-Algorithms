import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.Calendar;
import java.util.Random;
import java.util.Scanner;

public class Quicksort {
	private static void swap(int[] x, int first, int second) {
		x[first] = x[first] + x[second];
		x[second] =  x[first] - x[second];
		x[first] =  x[first] - x[second];
	}
	
	public static void quicksort(int[] x, int left, int right) {
		if (right <= left)
			return;
		
		Random rnd = new Random();
		rnd.setSeed(Calendar.getInstance().getTimeInMillis());
		
//		int pivot = rnd.nextInt(x.length);
		int pivot = 6;
		int i = left,  j = right;		
		
		while (i < j) {
			while (x[i] > pivot) {
				i--;
			}
			while (x[j] > pivot) {
				j--;
			}
			if (i < j) {
//				swap()
			}
			
		}
		
	}

	public static void main(String[] args) throws FileNotFoundException {
//		Scanner s = new Scanner(new FileReader("HW2.txt"));
//
//		int n = s.nextInt();
//		int[] x = new int[n];
//		for (int i = 0; i < n; i++)
//			x[i] = s.nextInt();
//		// InsertionSort.sort(x);
//		for (int i = 0; i < x.length; i++)
//			System.out.print(x[i] + " ");
//		s.close();
		int [] x = new int[]{1, 2};
		System.out.println("0: " + x[0] + "    1: " + x[1]);
		swap(x, 0, 1);
		System.out.println("0: " + x[0] + "    1: " + x[1]);

		
		x[1] = secondSwap(x[0], x[0] = x[1]);
		System.out.println("0: " + x[0] + "    1: " + x[1]);
	}

	private static int secondSwap(int i, int j) {
		// TODO Auto-generated method stub
		return 1;
	}
}
